# =============================================================================
# Ops Service Environment Variables
# =============================================================================

# Server
SERVER_PORT=8005
ENV=dev

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ops_db
DB_AUTO_MIGRATE=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
SECRET_KEY=your-jwt-secret-key
JWT_ISSUER=wealist-auth-service

# Auth Service
AUTH_SERVICE_URL=http://localhost:8080

# ArgoCD
ARGOCD_SERVER_URL=https://argocd.wealist.co.kr
ARGOCD_TOKEN=your-argocd-token
ARGOCD_INSECURE=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGINS=*

# Istio JWT Mode (set to true in K8s with Istio)
ISTIO_JWT_MODE=false
