# =============================================================================
# Auth Service (Spring Boot) - Environment Variables
# =============================================================================
# cp .env.example .env 후 값을 수정하세요.
# Docker 환경에서는 docker-compose.yml의 environment로 주입됩니다.
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_PORT=8080                 # 서버 포트 (AUTH_SERVICE_PORT와 동일)
AUTH_SERVICE_PORT=8080
APP_NAME=wealist-auth
SPRING_PROFILES_ACTIVE=dev       # dev, prod

# -----------------------------------------------------------------------------
# Redis Configuration (토큰 블랙리스트, 세션 관리)
# -----------------------------------------------------------------------------
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your-redis-password

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# 64자 이상의 안전한 시크릿 키 사용 권장
JWT_SECRET=your-jwt-secret-key-at-least-64-bytes-for-hs512-algorithm
JWT_ACCESS_TOKEN_EXPIRATION_MS=1800000      # Access Token: 30분 (밀리초)
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000   # Refresh Token: 7일 (밀리초)

# -----------------------------------------------------------------------------
# OAuth2 Configuration - Google
# -----------------------------------------------------------------------------
# Google Cloud Console에서 발급: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 리다이렉트 URL
OAUTH2_CLIENT_REDIRECT_URI=http://localhost:8080/oauth2/callback/google
OAUTH2_REDIRECT_URL_ENV=http://localhost:3000/oauth/callback

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
USER_SERVICE_URL=http://localhost:8081    # user-service URL (유저 조회/생성용)

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORANGECLOUD=DEBUG

# -----------------------------------------------------------------------------
# JVM Options
# -----------------------------------------------------------------------------
JAVA_OPTS=-Xms128m -Xmx256m -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
