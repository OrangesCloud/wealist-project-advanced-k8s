# =============================================================================
# Production Network - Example Variables
# =============================================================================
# Copy this file to terraform.tfvars and update values as needed

# -----------------------------------------------------------------------------
# DNS Configuration
# -----------------------------------------------------------------------------

# Enable Route53 DNS records (wealist.co.kr, api.wealist.co.kr)
# WARNING: Delete manually created Route53 records before enabling!
enable_dns = false

# -----------------------------------------------------------------------------
# VPC Configuration (if foundation is not deployed)
# -----------------------------------------------------------------------------
# Normally these are read from foundation remote state.
# Use these variables to override if foundation is not available.

# vpc_id            = "vpc-xxxxxxxxx"
# vpc_cidr_block    = "10.0.0.0/16"
# public_subnet_ids = ["subnet-xxx1", "subnet-xxx2", "subnet-xxx3"]

# -----------------------------------------------------------------------------
# ALB Configuration
# -----------------------------------------------------------------------------

# Enable ALB deletion protection (recommended for production)
# alb_deletion_protection = true

# ALB idle timeout (seconds)
# alb_idle_timeout = 60

# -----------------------------------------------------------------------------
# CloudFront Configuration
# -----------------------------------------------------------------------------

# Price class (PriceClass_100 = cheapest, PriceClass_All = global)
# cloudfront_price_class = "PriceClass_200"

# -----------------------------------------------------------------------------
# S3 Frontend Configuration
# -----------------------------------------------------------------------------

# Frontend S3 bucket name
# frontend_bucket_name = "wealist-frontend"
